<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="335dp"
        android:layout_height="364dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/MyAccount"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_column="0"
            app:layout_row="0"
            android:src="@drawable/profile" />

        <ImageView
            android:id="@+id/InternalView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_column="1"
            app:layout_row="0"
            android:src="@drawable/intenalview"
            />

        <TextView
            android:id="@+id/text2"
            android:layout_width="161dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:text="Internal View"
            android:textSize="22dp"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/StudentsDetails"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_column="0"
            app:layout_row="2"
            android:src="@drawable/studentsprofile" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Students Profile"
            android:textSize="22dp"
            app:layout_column="0"
            app:layout_row="3" />

        <ImageView
            android:id="@+id/TeachersProfile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_column="1"
            app:layout_row="2"
            android:src="@drawable/techerprofiles" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:gravity="center"
            android:text="Teachers Profile"
            android:textSize="22dp"
            app:layout_column="1"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Your Account"
            android:textSize="22dp"
            app:layout_column="0"
            app:layout_row="1" />


    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>